                        "schema": {
                            "$ref": "#/definitions/schemas.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "schemas.BatchDeleteGroupsRequest": {
            "type": "object",
            "required": [
                "ids"
            ],
            "properties": {
                "ids": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "integer"
                    }
                }
            }
        },
        "schemas.BatchOperationResponse": {
            "type": "object",
            "properties": {
                "fail_count": {
                    "type": "integer",
                    "example": 0
                },
                "failed_ids": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                },
                "success_count": {
                    "type": "integer",
                    "example": 3
                }
            }
        },
        "schemas.BatchUpdateGroupsRequest": {
            "type": "object",
            "required": [
                "ids"
            ],
            "properties": {
                "category": {
                    "type": "string",
                    "example": "default"
                },
                "dedup_scope": {
                    "type": "string",
                    "enum": [
                        "current",
                        "global"
                    ],
                    "example": "current"
                },
                "ids": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "integer"
                    }
                },
                "is_active": {
                    "type": "boolean",
                    "example": true
                }
            }
        },
        "schemas.CreateGroupRequest": {
            "type": "object",
            "required": [
                "user_id"
            ],
            "properties": {
                "account_limit": {
                    "type": "integer",
                    "example": 10
                },
                "category": {
                    "type": "string",
                    "example": "default"
                },
                "dedup_scope": {
                    "type": "string",
                    "enum": [
                        "current",
                        "global"
                    ],
                    "example": "current"
                },
                "description": {
                    "type": "string",
                    "example": "这是一个测试分组"
                },
                "is_active": {
                    "type": "boolean",
                    "example": true
                },
                "login_password": {
                    "type": "string",
                    "minLength": 6,
                    "example": "password123"
                },
                "remark": {
                    "type": "string",
                    "example": "测试分组"
                },
                "reset_time": {
                    "type": "string",
                    "example": "09:00:00"
                },
                "user_id": {
                    "type": "integer",
                    "example": 1
                }
            }
        },
        "schemas.ErrorResponse": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "example": 400
                },
                "error": {
                    "type": "string",
                    "example": "invalid_credentials"
                },
                "message": {
                    "type": "string",
                    "example": "用户名或密码错误"
                }
            }
        },
        "schemas.GroupInfo": {
            "type": "object",
            "properties": {
                "activation_code": {
                    "type": "string",
                    "example": "ABC123"
                },
                "category": {
                    "type": "string",
                    "example": "default"
                },
                "id": {
                    "type": "integer",
                    "example": 1
                }
            }
        },
        "schemas.GroupListResponse": {
            "type": "object",
            "properties": {
                "account_limit": {
                    "type": "integer",
                    "example": 10
                },
                "activation_code": {
                    "type": "string",
                    "example": "ABC123"
                },
                "category": {
                    "type": "string",
                    "example": "default"
                },
                "created_at": {
                    "type": "string",
                    "example": "2024-01-01T00:00:00Z"
                },
                "dedup_scope": {
                    "type": "string",
                    "example": "current"
                },
                "description": {
                    "type": "string",
                    "example": "这是一个测试分组"
                },
                "duplicate_incoming": {
                    "type": "integer",
                    "example": 5
                },
                "id": {
                    "type": "integer",
                    "example": 1
                },
                "is_active": {
                    "type": "boolean",
                    "example": true
                },
                "last_login_at": {
                    "type": "string",
                    "example": "2024-01-01T00:00:00Z"
                },
                "line_accounts": {
                    "type": "integer",
                    "example": 4
                },
                "line_business_accounts": {
                    "type": "integer",
                    "example": 1
                },
                "online_accounts": {
                    "type": "integer",
                    "example": 3
                },
                "remark": {
                    "type": "string",
                    "example": "测试分组"
                },
                "reset_time": {
                    "type": "string",
                    "example": "09:00:00"
                },
                "today_duplicate": {
                    "type": "integer",
                    "example": 2
                },
                "today_incoming": {
                    "type": "integer",
                    "example": 10
                },
                "total_accounts": {
                    "description": "统计信息",
                    "type": "integer",
                    "example": 5
                },
                "total_incoming": {
                    "type": "integer",
                    "example": 100
                },
                "updated_at": {
                    "type": "string",
                    "example": "2024-01-01T00:00:00Z"
                },
                "user_id": {
                    "type": "integer",
                    "example": 1
                },
                "username": {
                    "description": "用户信息",
                    "type": "string",
                    "example": "user001"
                }
            }
        },
        "schemas.LoginRequest": {
            "type": "object",
            "required": [
                "password",
                "username"
            ],
            "properties": {
                "password": {
                    "type": "string",
                    "example": "admin123"
                },
                "username": {
                    "type": "string",
                    "example": "admin"
                }
            }
        },
        "schemas.LoginResponse": {
            "type": "object",
            "properties": {
                "expires_in": {
                    "type": "integer",
                    "example": 86400
                },
                "group": {
                    "description": "子账号登录时返回",
                    "allOf": [
                        {
                            "$ref": "#/definitions/schemas.GroupInfo"
                        }
                    ]
                },
                "token": {
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                },
                "token_type": {
                    "type": "string",
                    "example": "Bearer"
                },
                "user": {
                    "$ref": "#/definitions/schemas.UserInfo"
                }
            }
        },
        "schemas.RefreshTokenRequest": {
            "type": "object",
            "required": [
                "token"
            ],
            "properties": {
                "token": {
                    "type": "string"
                }
            }
        },
        "schemas.RefreshTokenResponse": {
            "type": "object",
            "properties": {
                "expires_in": {
                    "type": "integer",
                    "example": 86400
                },
                "token": {
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                },
                "token_type": {
                    "type": "string",
                    "example": "Bearer"
                }
            }
        },
        "schemas.SubAccountLoginRequest": {
            "type": "object",
            "required": [
                "activation_code",
                "password"
            ],
            "properties": {
                "activation_code": {
                    "type": "string",
                    "example": "ABC123"
                },
                "password": {
                    "type": "string",
                    "example": "password123"
                }
            }
        },
        "schemas.UpdateGroupRequest": {
            "type": "object",
            "properties": {
                "account_limit": {
                    "type": "integer",
                    "example": 10
                },
                "category": {
                    "type": "string",
                    "example": "default"
                },
                "dedup_scope": {
                    "type": "string",
                    "enum": [
                        "current",
                        "global"
                    ],
                    "example": "current"
                },
                "description": {
                    "type": "string",
                    "example": "这是一个测试分组"
                },
                "is_active": {
                    "type": "boolean",
                    "example": true
                },
                "login_password": {
                    "type": "string",
                    "minLength": 6,
                    "example": "password123"
                },
